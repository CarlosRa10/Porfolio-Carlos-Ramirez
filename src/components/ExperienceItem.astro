---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date  } = Astro.props;
---

<div class="relative pl-8 pb-1 group isolate">
  <!-- Línea decorativa animada -->
  <div class="absolute left-0 top-0 w-0.5 h-full bg-gray-800 group-hover:bg-gradient-to-b from-amber-400/30 via-amber-400/70 to-amber-400/30 transition-all duration-500"></div>
  
  <!-- Punto decorativo con efecto de halo -->
  <div class="absolute left-0 top-1.5 transform -translate-x-1/2 w-4 h-4 rounded-full bg-gray-800 border-2 border-amber-400/70 transition-all duration-300 group-hover:bg-amber-400 group-hover:scale-125 group-hover:shadow-[0_0_0_4px_rgba(251,191,36,0.2)] z-10"></div>
  
  <!-- Contenido principal -->
  <div class="relative p-6 rounded-xl bg-gradient-to-br from-gray-900/50 to-gray-900/0 group-hover:from-gray-900/70 group-hover:to-gray-800/20 transition-all duration-300 border border-gray-800 group-hover:border-amber-400/30 backdrop-blur-sm">
    <!-- Fecha con diseño minimalista -->
    <time class="inline-block px-3 py-1 mb-3 text-xs font-mono font-medium text-amber-300/80 bg-gray-800/50 rounded-full border border-gray-700 group-hover:border-amber-400/30 transition-colors">
      {date}
    </time>
    
    <!-- Título con efecto de gradiente -->
    <h3 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-amber-200 via-amber-300 to-amber-400 pb-2 mb-2 group-hover:bg-gradient-to-r group-hover:from-amber-100 group-hover:via-amber-200 group-hover:to-amber-300 transition-all duration-500">
      {title}
    </h3>
    
    <!-- Descripción con mejor legibilidad -->
    <p class="text-gray-300/90 mb-5 leading-relaxed text-pretty transition-colors group-hover:text-gray-200">
      {description}
    </p>
    
    <!-- Botón con efecto 3D mejorado -->
    {link && (
      <a 
        href={link} 
        target="_blank" 
        rel="noopener" 
        class="relative inline-flex items-center gap-2 px-4 py-2.5 overflow-hidden text-sm font-medium transition-all duration-300 rounded-lg group/button bg-gray-800/80 text-amber-200 hover:text-white hover:bg-gray-700/90 hover:shadow-[0_4px_15px_rgba(251,191,36,0.3)] border border-gray-700 hover:border-amber-400/50"
      >
        <span class="relative z-10">Explorar Empresa</span>
        <svg class="w-3 h-3 relative z-10 transition-transform group-hover/button:translate-x-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
        <span class="absolute inset-0 bg-gradient-to-r from-amber-400/10 via-amber-400/20 to-transparent opacity-0 group-hover/button:opacity-100 transition-opacity duration-500"></span>
      </a>
    )}
  </div>
</div>