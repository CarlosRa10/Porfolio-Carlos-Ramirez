---
const COURSES = [
  {
    escuela: "Fundación Telefónica Movistar",
    titulo: "Introducción al Diseño de Videojuegos",
    link: "/FT VE - Certificado.pdf",
    image: "/movistarCurso.webp",
  },
  {
    escuela: "Códigofacilito",
    titulo: "Curso profesional de Python",
    link: "/Certificado - Curso profesional de Python.pdf",
    image: "/codigoFacilitoPython1.webp",
  },
  {
    escuela: "Códigofacilito",
    titulo: "Curso a fondo de GitHub",
    link: "/Certificado - Curso a fondo de GitHub.pdf",
    image: "/codigoFacilitoGithub.webp",
  },
  {
    escuela: "Platzi",
    titulo: "REDES INFORMÁTICAS DE INTERNET",
    link: "/diploma-redes.pdf",
    image: "/platziRedes.webp",
  },
  {
    escuela: "Zenva",
    titulo: "Godot 101 - Game Engine Foundations",
    link: "/certificate-preview-399f69244af8.pdf",
    image: "/zenva.webp",
  },
];
---


{
  COURSES.map(({ image, titulo, escuela, link }) => (
    <article class="group relative overflow-hidden rounded-xl border border-gray-800 p-6 transition-all hover:border-amber-400/30 hover:bg-gradient-to-b hover:from-gray-900/50 hover:to-gray-900/10 backdrop-blur-sm">
      {/* Fondo decorativo */}
      <div class="absolute -right-10 -top-10 h-32 w-32 rounded-full bg-amber-400/10 blur-3xl transition-all group-hover:bg-amber-400/20" />

      {/* Contenido */}
      <div class="relative z-10">
        <h3 class="text-2xl font-bold text-amber-200 mb-2 transition-all group-hover:text-amber-300">
          {escuela}
        </h3>
        <p class="text-gray-300 mb-4">{titulo}</p>
      </div>

      {/* Botón para ver el certificado (PDF) */}
      <div class="relative z-10 mb-5">
        <a 
          href={link} 
          target="_blank" 
          rel="noopener"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-700 hover:border-amber-400/50 transition-all"
        >
          Ver certificado
          <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      </div>

      {/* Imagen del curso (logo o certificado) */}
      <div class="relative overflow-hidden rounded-lg border border-gray-800 transition-all group-hover:border-amber-400/30">
        <img 
          class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-[1.02]" 
          src={image} 
          alt={`Certificado del curso ${titulo} por ${escuela}`} 
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 transition-opacity group-hover:opacity-100" />
      </div>
    </article>
  ))
}